// =======================================================
// brainFallback.js
// الردود المؤتمتة الرسمية لنوفا بوت v3
// =======================================================

const { NOVA_BRAIN_V3 } = require("./nova-brain.v3.config");

function automatedReply(intent = "GENERAL", lang = "ar") {
  const R = NOVA_BRAIN_V3.RESPONSES;

  if (intent === "NO_MATCH") return R.NO_MATCH;
  if (intent === "POSITIVE") return R.POSITIVE[0];
  if (intent === "NEGATIVE") return R.NEGATIVE[0];

  switch (intent) {
    case "LEARNING": return R.GENERIC[2];
    case "PURCHASE": return R.GENERIC[4];
    case "MARKETING": return R.GENERIC[1];
    case "COLLABORATION": return R.GENERIC[0];
    case "ABOUT": return R.ABOUT_NOVALINK.WHO_WE_ARE;
    default: return R.GENERIC[0];
  }
}

module.exports = {
  automatedReply
};
